<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewUIController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="900.0">
         <center>
            <ImageView fx:id="image" fitHeight="480.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <ToolBar prefHeight="50.0" prefWidth="400.0" BorderPane.alignment="CENTER">
              <items>
                  <Button fx:id="zoomBig" mnemonicParsing="false" text="放大" />
                  <Button fx:id="zoomSmall" mnemonicParsing="false" text="缩小" />
              </items>
            </ToolBar>
         </bottom>
      </BorderPane>
      <Pane prefHeight="400.0" prefWidth="900.0">
         <children>
            <Button fx:id="back" layoutX="20.0" layoutY="10.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="50.0" text="返回" />
            <Button fx:id="previous" layoutY="275.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="&lt;" />
            <Button fx:id="next" layoutX="850.0" layoutY="278.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" text="&gt;" />
         </children>
      </Pane>
   </children>
</AnchorPane>
